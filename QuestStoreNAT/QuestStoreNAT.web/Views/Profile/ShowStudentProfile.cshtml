@inject QuestStoreNAT.web.Services.ICurrentSession Session
@model Student

@{ 
    ViewData["Title"] = "ShowStudentProfile";
}

<div class="landing">

    <partial name="~/Views/Shared/_SidebarMenu.cshtml">
        <div class="student_panel">
            <div class="header_profile">
                <div id="nameStudent">@Model.FirstName @Model.LastName</div>
                <div id="coolcoins">Current coolcoins : @Model.Wallet</div>
            </div>
            <div id="Level">Level : @Model.level</div>
            <div class="artifacts">
                <div class="header_artifacts">Your Artifacts</div>
                <div id="artifact">
                    @foreach (var artifact in Model.StudentArtifacts)
                    {
                    <div class="questreward questreward--individual">
                        <h3 class="questreward__title">@artifact.Name</h3>
                        <h3 class="questreward__cost">@artifact.Cost</h3>
                        <p class="questreward__description">@artifact.Description</p>
                        <div class="admin-controll">
                        <a asp-action="UseArtifact" asp-route-id="@artifact.Id" class="dropdown__button dropdown--margin">Use</a>
                        </div>
                    </div>
                    }
                </div>
            </div>
            <div class="artifacts">
                <div class="header_artifacts">Used Artifacts</div>
                @foreach (var artifact in Model.UsedStudentArtifacts)
                {
                    <div class="questreward questreward--individual">
                    <h3 class="questreward__title">@artifact.Name</h3>
                    <h3 class="questreward__cost">@artifact.Cost</h3>
                    <p class="questreward__description">@artifact.Description</p>
                </div>
                }
            </div>
            </div>
        </div>
</div>