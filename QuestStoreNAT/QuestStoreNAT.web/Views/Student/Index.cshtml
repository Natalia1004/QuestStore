@inject QuestStoreNAT.web.Services.ICurrentSession Session
@model List<Student>

@{
    ViewData["Title"] = "ViewAllStudents";
}


<div class="landing">

    <partial name="~/Views/Shared/_SidebarMenu.cshtml">

        <div id="landing__content">
            <div class="inside_landing">
                <div class="landing__content__wrapper">
                </div>
                @foreach ( var student in Model )
                {
                    <div class="show-all_box">
                        <div class="show-all_user">
                            <h3 class="user_name">@student.FirstName</h3>
                            <h4 class="user_position"> @student.LastName </h4>
                            <p class="show-all_text">@student.Wallet</p>
                            @if ( Session.LoggedUserRole == Role.Admin | Session.LoggedUserRole == Role.Mentor )
                            {
                            <a asp-action="Edit" asp-route-Id="@student.Id" class="dropdown__button dropdown--margin">Edit</a>
                            <a asp-action="Delete" asp-route-id="@student.Id" class="dropdown__button dropdown--margin">Delete</a>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
</div>